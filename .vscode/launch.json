    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/smp/Ldbg",
            "cwd": "${workspaceFolder}/smp",
            "MIMode": "gdb",
            "preLaunchTask": "build-dbg",
        },
        {
            "name": "(gdb) Development",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/smp/Ldev",
            "cwd": "${workspaceFolder}/smp",
            "MIMode": "gdb",
            "preLaunchTask": "build-dev",
        },
        {
            "name": "(gdb) Release",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/smp/L",
            "cwd": "${workspaceFolder}/smp",
            "MIMode": "gdb",
            "preLaunchTask": "build-rls",
        }
    ]
}
